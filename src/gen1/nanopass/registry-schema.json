{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://linkustics.com/resources/ldw-registry-schema.json",

    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        }
    },
    "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*(::([a-zA-Z_][a-zA-Z0-9_]*))*$": {
            "type": "string",
            "pattern": "^(.{0,2}/)?([a-zA-Z0-9_.-]+/)*[a-zA-Z0-9_.-]+$"
        }
    },
    "additionalProperties": false
}
